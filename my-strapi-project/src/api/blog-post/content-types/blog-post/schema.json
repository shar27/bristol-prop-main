{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Subtitle": {
      "type": "blocks"
    },
    "Cards": {
      "type": "component",
      "component": "blog.card",
      "repeatable": true
    },
    "buttonText": {
      "type": "string"
    },
    "buttonLink": {
      "type": "string",
      "unique": true
    },
    "qrTitle": {
      "type": "string"
    },
    "qrImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
